{
    "version": "0.1.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Bloobuster Server",
            "program": "${workspaceFolder}/src/server.ts",
            "preLaunchTask": "npm: build",
            "sourceMaps": true,
            "smartStep": true,
            "internalConsoleOptions": "openOnSessionStart",
            "outFiles": [
                "${workspaceFolder}/tmp/**/*.js"
            ],
            "envFile": "${workspaceFolder}/.env.development"
        }
    ]
}